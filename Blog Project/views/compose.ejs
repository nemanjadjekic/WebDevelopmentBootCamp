<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" class="form-input" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" name="postTitle" class="form-control">
    <label for="postBody">Post</label>
    <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button" value="unknown">Publish</button>
</form>

<%- include('partials/footer'); -%>